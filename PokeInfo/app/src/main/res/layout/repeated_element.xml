<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_gravity="center"
            >


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pokemonImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="3dp"

                android:padding="5dp"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:layout_height="15dp"
                    android:layout_width="150dp"
                    />
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="150dp"
                    android:textSize="24sp"
                    android:text="Name"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:fontFamily="@font/pokesolid"
                    >
                </TextView>
                <TextView
                    android:layout_height="25dp"
                    android:layout_width="150dp"
                    android:textSize="14sp"
                    android:text="Name"
                    android:layout_gravity="center"
                    android:textColor="@color/gray"
                    android:id="@+id/typetext"
                    android:fontFamily="@font/pokesolid"
                    >
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/types"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="0sp"
                        android:fontFamily="@font/pokesolid2"
                        android:src="@drawable/psychic"
                        android:text="TYPES" />

                    <ImageView
                        android:id="@+id/types2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="TYPES"
                        android:fontFamily="@font/pokesolid2"
                        android:layout_weight="1"
                        android:src="@drawable/ice"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/pokeballImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height=".75pt"
            tools:ignore="MissingConstraints">
        </ImageView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>